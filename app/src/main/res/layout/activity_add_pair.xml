<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddPairActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/pair_title"
                    style="@style/MTECInput"
                    android:hint="Предмет"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            <EditText
                    android:id="@+id/pair_teacher"
                    style="@style/MTECInput"
                    android:hint="Преподаватель"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            <EditText
                    android:id="@+id/pair_room"
                    style="@style/MTECInput"
                    android:hint="Аудитория"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            <EditText
                    android:id="@+id/pair_number"
                    style="@style/MTECInput"
                    android:hint="Номер"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_pair_button"
            android:layout_alignParentBottom="true"
            style="@style/MTECButtonAdd"
            android:layout_marginBottom="16dp"
            android:text="@string/add_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnterActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/enter_button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_button"
            style="@style/MTECButton"
            android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="8dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:onClick="openSchedule"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="32dp" />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blue_mtec_50"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />

    <TextView
            android:text="@string/for_admin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/text_color_50"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:onClick="openAdmin" />

    <ImageView
            android:layout_width="192dp"
            android:layout_height="192dp"
            app:srcCompat="@drawable/mtec_logo_circle"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>